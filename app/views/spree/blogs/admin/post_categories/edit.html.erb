<%= render :partial => 'spree/blogs/admin/shared/post_tabs', :locals => {:current => "Categories"} %>

<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @post_category } %>

<%= form_for([:admin, @post, @post_category], :url => admin_post_category_path(@post, @post_category.id)) do |form| %>
  <fieldset>
    <legend><%= t(".edit_category") %></legend>
    <%= render "form", :form => form %>
    <%= render :partial => 'spree/admin/shared/edit_resource_links' %>
  </fieldset>
<% end %>
